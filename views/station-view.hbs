{{> menu active="dashboard"}}

<iframe width="100%" height="350" style="border: #ffffff" src="https://www.openstreetmap.org/export/embed.html?
bbox={{subtract longitude 0.005}}%2C{{subtract latitude 0.005}}%2C{{add longitude 0.005}}%2C{{add latitude 0.005}}
&amp;layer=mapnik&amp;
marker={{latitude}}%2C{{longitude}}">
</iframe>

{{> flash-messages}}

{{> add-reading}}
{{> auto-reading}}

<div class="content box">
    {{#if readings}}
        {{> card-readings}}
        {{> list-readings}}
    {{else}}
        <p>You have no readings yet. Add one!</p>
    {{/if}}
</div>

{{> confirm-modal }}