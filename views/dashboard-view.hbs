{{> menu active="dashboard"}}

{{#if flash.error}}
<div id="flash_message" class="flash-error notification is-danger">
  {{flash.error}}
</div>
{{/if}}

{{#if flash.success}}
<div id="flash_message" class="flash-success notification is-success">
  {{flash.success}}
</div>
{{/if}}

{{> add-station}}

{{#if stations}}
    {{> list-stations}}
{{else}}
    <p>You have no stations yet. Add one!</p>
{{/if}}

<dialog id="confirmDeleteDialog">
    <p class="title">Are you sure you want to delete this station?</p>
    <div class="has-text-centered">
        <form id="deleteForm" method="POST" action="">
            <button class="button is-danger" id="confirmDelete" type="submit">Yes, delete</button>
        </form>
        <button class="button is-light" id="cancelDelete">No, cancel</button>
    </div>
</dialog>